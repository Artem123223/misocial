mixin card(oneCard)
    figure 
        figcaption 
            img(src=oneCard.img, alt=oneCard.alt)
            p.personal #{oneCard.personal}
            p.price 
                span.currency #{oneCard.currency}
                b #{oneCard.price} 
                if isMonth 
                    | /month 
                else 
                    | /year
            ul.description
                for item in oneCard.description
                    li #{item}
            a(href=oneCard.hrefBtn) #{oneCard.btn}